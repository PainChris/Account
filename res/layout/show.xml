<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/date_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        
        <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="@string/datetodate"/>
        
        <Button
            android:id="@+id/date_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/food"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:layout_gravity="right"
                android:background="@drawable/buttontext_food"/>

            <TextView
                android:id="@+id/shop"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:background="@drawable/buttontext_shop"/>

            <TextView
                android:id="@+id/entertainment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:background="@drawable/buttontext_entertainment"/>

            <TextView
                android:id="@+id/communication"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttontext_communication"/>

            <TextView
                android:id="@+id/study"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttontext_study"/>
            
            <TextView
                android:id="@+id/travle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:background="@drawable/buttontext_travle"/>
            
            <TextView
                android:id="@+id/medicial"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:background="@drawable/buttontext_medicial"/>
            
            <TextView
                android:id="@+id/others"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:background="@drawable/buttontext_others"/>
        </LinearLayout>
    </ScrollView>
    <Button 
        android:id="@+id/back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/back"/>
</LinearLayout>
